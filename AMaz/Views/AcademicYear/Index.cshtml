@using AMaz.Common
@model IEnumerable<AcademicYearViewModel>

@{
    ViewData["Title"] = "All Academic Years";
    Layout = "_AdminLayout";
}


@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <!-- Display validation errors in a div with red text -->
    <div class="validation-summary-errors" asp-validation-summary="All">@ViewBag.Error</div>
    <style>
        .validation-summary-errors {
            color: white; /* Text color */
            background-color: #dc3545; /* Background color */
            padding: 10px; /* Padding around the text */
            border: 1px solid #dc3545; /* Border color and width */
            margin-bottom: 10px; /* Margin at the bottom */
            border-radius: 5px; /* Rounded corners */
        }
    </style>

}


<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <ul class="sidebar-menu">
            
            <li class="menu-header">Functions</li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Auth</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="Account">Create Account</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-bicycle"></i> <span>Features</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="AcademicYear">Create Academic Year</a></li>
                </ul>
            </li>
            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Components</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Index" asp-controller="Account">View User List</a></li>
                    <li class=active><a class="nav-link beep beep-sidebar" asp-action="Index" asp-controller="AcademicYear">View Academic Year</a></li>
                </ul>
            </li>
          
        </ul>
    </aside>
</div>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>View Academic Year</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">View Academic Year</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">All Academic Year</h2>

            <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Academic Year</h4>
                            <div class="card-header-form">
                                <form>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Date Start</th>
                                            <th>Date End</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var academicYear in Model)
                                        {
                                            <tr>
                                                <td>@academicYear.AcademicYearId</td>
                                                <td>@academicYear.DateTimeFrom</td>
                                                <td>@academicYear.DateTimeTo</td>
                                                <td>
                                                    <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@academicYear.AcademicYearId">Details</a> 
                                                    <a class="btn btn-outline-info btn-sm" asp-action="Update" asp-route-id="@academicYear.AcademicYearId">Update</a> 
                                                    <a class="btn btn-outline-warning btn-sm" asp-action="Delete" asp-route-id="@academicYear.AcademicYearId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-lg" asp-action="Create">Create</a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <!-- JS Libraies -->
    <script src="~/assets/modules/jquery-ui/jquery-ui.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/components-table.js"></script>
}
