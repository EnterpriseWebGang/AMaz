@using AMaz.Common
@model UpdateAcademicYearViewModel

@{
    ViewData["Title"] = "Update Academic Year";
    Layout = "_AdminLayout";
}


<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <ul class="sidebar-menu">
         
         
            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Functions</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Index" asp-controller="Account">View User List</a></li>
                    <li class=active><a class="nav-link beep beep-sidebar" asp-action="Index" asp-controller="AcademicYear">View Academic Year</a></li>
                </ul>
            </li>
          
        </ul>
    </aside>
</div>


<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Update Academic Year</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a asp-action="Index" asp-controller="AcademicYear">View Academic Year</a></div>
                <div class="breadcrumb-item">Update Academic Year</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update Academic Year</h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="AcademicYear" asp-action="Update" method="post" asp-route-id ="@(ViewBag.Id)">
                            <div class="form-group">
                                <label asp-for="DateTimeFrom"></label>
                                <input asp-for="DateTimeFrom" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="DateTimeTo"></label>
                                <input asp-for="DateTimeTo" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div

