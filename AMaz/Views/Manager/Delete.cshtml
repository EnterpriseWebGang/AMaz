@model AMaz.Common.ContributionViewModel
@{
    ViewData["Title"] = "Create Operators";
    Layout = "_AdminLayout";
}
<h2>Delete Contribution</h2>

<form asp-action="Delete" asp-controller="Manager" method="post">
    <div>
        <h4>Are you sure you want to delete this contribution?</h4>
        <p>
            <strong>Title:</strong> @Model.Title
        </p>
    </div>
    <button type="submit">Confirm Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
