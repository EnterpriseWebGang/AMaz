@using AMaz.Common
@model ContributionViewModel[]

@{
    ViewData["Title"] = "Contributions";
    Layout = "_AdminLayout"; // Adjust layout as needed
}

<div class="main-sidebar sidebar-style-2">
    <!-- Sidebar content -->
</div>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Contributions</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Contributions</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Status</th>
                                        <th>Submission Date</th>
                                        <th>Accepted Date</th>
                                        <th>Author Name</th>
                                        <th>Is Accepted</th>
                                        <th>Files</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contribution in Model)
                                    {
                                        <tr>
                                            <td>@contribution.Title</td>
                                            <td>@contribution.Content</td>
                                            <td>@contribution.Status</td>
                                            <td>@contribution.SubmissionDate.ToShortDateString()</td>
                                            <td>@(contribution.AcceptedDate.HasValue ? contribution.AcceptedDate.Value.ToShortDateString() : "N/A")</td>
                                            <td>@contribution.AuthorName</td>
                                            <td>@(contribution.IsAccepted ? "Yes" : "No")</td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
