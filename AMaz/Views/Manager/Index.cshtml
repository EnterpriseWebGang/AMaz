@{
    ViewData["Title"] = "Member List";
    Layout = "_AdminLayout";
}


<div class="main-content">
    <!-- Main content -->
    <section class="section">
        <div class="section-header">
            <h1>View Operators</h1>
            <!-- Header content -->
        </div>

        <div class="section-body">
            <h2 class="section-title">Member List</h2>

            <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <!-- Card content -->
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Status</th>
                                            <th>Submission Date</th>
                                            <th>Author Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var contribution in Model)
                                        {
                                            <tr>
                                                <td>@contribution.Title</td>
                                                <td>@contribution.Status</td>
                                                <td>@contribution.SubmissionDate.ToShortDateString()</td>
                                                <td>@contribution.AuthorName</td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@contribution.ContributionId">Details</a> |
                                                    <a asp-action="Edit" asp-route-id="@contribution.ContributionId">Edit</a> |
                                                    <form asp-action="Delete" method="post" style="display: inline;">
                                                        <input type="hidden" name="id" value="@contribution.ContributionId" />
                                                        <button type="submit" class="btn-link">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-lg" asp-action="Create">Create</a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <!-- JS Libraies -->
    <script src="~/assets/modules/jquery-ui/jquery-ui.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/components-table.js"></script>
}
