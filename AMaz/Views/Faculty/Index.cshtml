<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>View Faculty List</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">View Faculty List</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Faculty List</h2>

            <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Faculty</h4>
                            <div class="card-header-form">
                                <form>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-md">
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                    </tr>

                                    @foreach (var faculty in Model)
                                    {
                                        <tr>
                                            <td>@faculty.FacultyId</td>
                                            <td>@faculty.Name</td>
                                            <td>
                                                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@faculty.FacultyId">Details</a>
                                                <a class="btn btn-outline-info btn-sm" asp-action="Update" asp-route-id="@faculty.FacultyId">Update</a>
                                                <a class="btn btn-outline-warning btn-sm" asp-action="Delete" asp-route-id="@faculty.FacultyId">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-lg" asp-action="Create">Create</a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <!-- JS Libraies -->
    <script src="~/assets/modules/jquery-ui/jquery-ui.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/components-table.js"></script>
}