<!-- Add Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    function renderBarChart(chartId, labels, data) {
        var ctx = document.getElementById(chartId).getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels, // Labels containing both faculty names and academic years
                datasets: [{
                    label: 'Number of Contributions',
                    data: data,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    }


    function renderPieChart(chartId, labels, data) {
        var ctx = document.getElementById(chartId).getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)'
                    ]
                }]
            }
        });
    }
    function fetchDataAndRenderCharts() {
        // This function should fetch actual data from the server
        // Replace the example data with actual fetched data
        var facultyNames = ["Faculty A", "Faculty B", "Faculty C"];
        var academicYears = ['2019-2020', '2020-2021', '2021-2022', '2022-2023']; // Add your academic year labels here
        var contributionsData = [
            [100, 150, 200], // Example contributions data for Faculty A
            [120, 180, 220], // Example contributions data for Faculty B
            [90, 160, 210]   // Example contributions data for Faculty C
        ];
        var contributorsData = contributionsData; // Set contributorsData same as contributionsData
        var percentageData = [
            [50, 30, 20],     // Example percentage data for Faculty A
            [40, 35, 25],     // Example percentage data for Faculty B
            [30, 25, 15]      // Example percentage data for Faculty C
        ];

        // Combine faculty names with academic years for labels
        var labels = [];
        for (var i = 0; i < facultyNames.length; i++) {
            for (var j = 0; j < academicYears.length; j++) {
                labels.push(facultyNames[i] + ' - ' + academicYears[j]);
            }
        }

        // Render the bar chart for contributions
        renderBarChart("contributionsChart", labels, contributionsData.flat());

        // Render the bar chart for contributors
        renderBarChart("contributorsChart", labels, contributorsData.flat());

        // Render the pie chart for percentage
        renderPieChart("percentageChart", facultyNames, percentageData.flat());
    }




    document.addEventListener('DOMContentLoaded', function () {
        fetchDataAndRenderCharts();
    });
</script>

