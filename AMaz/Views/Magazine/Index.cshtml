<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>View Magazine List</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">View Magazine</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Magazine List</h2>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Magazine</h4>
                           
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tr>
                                        <th>Name</th>
                                        <th>First Closure Date</th>
                                        <th>Final Closure Date</th>
                                        <th>Faculty</th>
                                        <th>Academic Year</th>
                                        <th>Action</th>
                                    </tr>

                                    @foreach (var magazine in Model)
                                    {
                                        <tr>
                                            <td>@magazine.Name</td>
                                            <td>@magazine.FirstClosureDate.ToShortDateString()</td>
                                            <td>@magazine.FinalClosureDate.ToShortDateString()</td>
                                            <td>@magazine.FacultyName</td>
                                            <td>@magazine.AcademicYear.DateTimeFrom - @magazine.AcademicYear.DateTimeTo</td>
                                            <td>
                                                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@magazine.MagazineId">Details</a>
                                                @if(User.IsInRole("Manager")){
                                                    <a class="btn btn-outline-info btn-sm" asp-action="Update" asp-route-id="@magazine.MagazineId">Update</a>
                                                    <a class="btn btn-outline-warning btn-sm" asp-action="Delete" asp-route-id="@magazine.MagazineId">Delete</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    @if (User.IsInRole("Manager")){
                        <a class="btn btn-primary btn-lg" asp-action="Create">Create</a>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

