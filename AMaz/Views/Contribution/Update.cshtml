@model AMaz.Common.UpdateContributionViewModel

@{
    ViewData["Title"] = "Update Contribution";
    Layout = "_AdminLayout";
}

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Update Contribution</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Update Contribution</div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Contribution</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Update" asp-controller="Contribution" asp-route-id ="@ViewBag.Id" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="title">Homework Title</label>
                                <input asp-for="Title" class="form-control" id="title" name="title" required />
                            </div>

                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea asp-for="Content" class="form-control" id="content" name="content" rows="5" required></textarea>
                            </div>

                            @Html.DropDownListFor(m => m.MagazineId, new SelectList(Model.Magazines, "MagazineId", "Name"), "Select Magazine", new { @class = "form-control", @required = "required" })

                            <div class="form-group">
                                <label for="files">Upload Files</label>
                                <input type="file" asp-for="Files" id="files" name="files" multiple class="form-control" required />
                            </div>

                            <div class="form-group">
                                <div class="col-md-4"></div>
                                <div class="col-lg-4 col-md-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="agree" class="custom-control-input" id="agree">
                                        <label for="agree" class="custom-control-label">I agree with the <a href="">Terms and Conditions</a></label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
