@model AMaz.Common.UpdateContributionViewModel

@{
    ViewData["Title"] = "Update Contribution";
    Layout = "_AdminLayout";
}

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Update Contribution</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Update Contribution</div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Contribution</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Update" asp-controller="Contribution" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" class="form-control" id="Title" name="Title" asp-for="Title" required />
                            </div>
                            <div class="form-group">
                                <label for="Content">Content</label>
                                <textarea class="form-control" id="Content" name="Content" asp-for="Content" rows="5" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Files">Upload Files</label>
                                <input type="file" class="form-control" id="Files" name="Files" asp-for="Files" multiple />
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
