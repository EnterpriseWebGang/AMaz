@using AMaz.Common
@model List<ContributionViewModel>

@{
    ViewData["Title"] = "Contributions";
    Layout = "_CoordinatorLayout"; // Adjust layout as needed
}

<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-action="Coordinator" asp-controller="Home">AMaz</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-action="Coordinator" asp-controller="Home">AMaz</a>
        </div>
        <ul class="sidebar-menu">

            <li class="menu-header">Functions</li>

            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Components</span></a>
                <ul class="dropdown-menu">
                    <li class=active><a class="nav-link beep beep-sidebar" asp-action="Index" asp-controller="Contribution">View All Contribution</a></li>

                </ul>
            </li>

        </ul>
    </aside>
</div>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Contributions</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">View All Contribution</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Advanced Table</h4>
                        <div class="card-header-form">
                            <form>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <div class="input-group-btn">
                                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <tr>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Status</th>
                                    <th>Submission Date</th>
                                    <th>Accepted Date</th>
                                    <th>Author Name</th>
                                    <th>Is Accepted</th>
                                    <th>Files</th>
                                    <th>Actions</th>
                                </tr>
                                @foreach (var contribution in Model)
                                {
                                    <tr>
                                        <td>@contribution.Title</td>
                                        <td>@contribution.Content</td>
                                        <td>@contribution.Status</td>
                                        <td>@contribution.SubmissionDate.ToShortDateString()</td>
                                        <td>@(contribution.AcceptedDate.HasValue ? contribution.AcceptedDate.Value.ToShortDateString() : "N/A")</td>
                                        <td>@contribution.AuthorName</td>
                                        <td>@(contribution.IsAccepted ? "Yes" : "No")</td>
                                        <td>
                                            <!-- Download links for files -->
                                            @if (contribution.Files != null && contribution.Files.Length > 0)
                                            {
                                                foreach (var file in contribution.Files)
                                                {
                                                    var p = new Dictionary<string, string>
                                        {
                                        { "fileId", file.Id },{ "contributionId", contribution.ContributionId }
                                        };

                                                    <a asp-action="GetContributionFile" asp-all-route-data="p">@file.Name</a>

                                                    <br />
                                                }
                                            }
                                            else
                                            {
                                                <span>No files</span>
                                            }
                                        </td>
                                       
                                            <!-- Edit button -->
                                        <td>
                                            <div style="display:flex;">
                                                <a style="margin-right:10px;" asp-controller="Contribution" asp-action="Update" asp-route-id="@contribution.ContributionId" class="btn btn-outline-primary btn-sm">Update</a>
                                                <form asp-controller="Contribution" asp-action="Delete" asp-route-id="@contribution.ContributionId" method="post" onsubmit="return confirm('Are you sure you want to delete this contribution?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                                </form>
                                            </div>
                                           
                                        </td>

                                     
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    </section>
</div>
