<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Reset Password</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Reset Password</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Reset Password</h4>
                    </div>
                    <div class="card-body">


                        <form asp-action="ResetPassword" asp-route-userId="@ViewBag.UserId" method="post" class="wizard-content mt-2" novalidate>
                            <div class="wizard-pane">
                                <div class="form-group row align-items-center">
                                    <label asp-for="Password" class="col-md-4 text-md-right text-left">New Password</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input asp-for="Password" type="password" name="password" class="form-control" required>
                                        <div class="invalid-feedback">
                                            Please enter a password.
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <label asp-for="ConfirmPassword" class="col-md-4 text-md-right text-left">Confirm Password</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input asp-for="ConfirmPassword" type="password" name="confirmPassword" class="form-control" required>
                                        <div class="invalid-feedback">
                                            Please confirm the password.
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4"></div>
                                    <div class="col-lg-4 col-md-6 text-right">
                                        <button class="btn btn-primary" type="submit">Reset Password</button>
                                        <a href="#" class="btn btn-icon icon-right btn-primary">Back</a>
                                    </div>
                                </div>
                            </div>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


