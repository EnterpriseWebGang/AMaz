    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a href="#">AMaz</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a href="#">AMaz</a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">Dashboard</li>
            <li class="dropdown">
                <a href="#" class="nav-link"><i class="fas fa-fire"></i><span>Dashboard</span></a>
            </li>
            <li class="menu-header">Functions</li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Auth</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="Account">Create Account</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-bicycle"></i> <span>Features</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="AcademicYear">Create Academic Year</a></li>
                </ul>
            </li>
            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Components</span></a>
                <ul class="dropdown-menu">
                    <li class=active><a class="nav-link beep beep-sidebar" asp-action="Index" asp-controller="Account">View User List</a></li>
                    <li><a asp-action="Index" asp-controller="AcademicYear">View Academic Year</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Components</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="Contribution">Create Contribution</a></li>
                    <li><a asp-action="Index" asp-controller="Contribution">View Contribution</a></li>
                </ul>
            </li>
        </ul>
    </aside>
</div>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Change User Role</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">View User List</a></div>
                <div class="breadcrumb-item">Change User Role</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Change User Role</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        <form asp-action="ChangeUserRole" asp-route-userId="@ViewBag.UserId" method="post" id="changeUserRoleForm">
                            <div class="form-group">
                                <label asp-for="Role">Select Role:</label>
                                <select asp-for="Role" class="form-control">
                                    <option value="@((int)Role.Manager)" selected=@(Model.Role == (int)Role.Manager)>Manager</option>
                                    <option value="@((int)Role.Coordinator)" selected=@(Model.Role == (int)Role.Coordinator)>Coordinator</option>
                                    <option value="@((int)Role.Student)" selected=@(Model.Role == (int)Role.Student)>Student</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <button type="submit" id="swal-5" class="btn btn-primary">Change</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <!-- JS Libraies -->
    <script src="~/assets/modules/sweetalert/sweetalert.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/modules-sweetalert.js"></script>
}

