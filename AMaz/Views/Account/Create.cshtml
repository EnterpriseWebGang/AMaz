@model CreateAccountViewModel

@{
    ViewData["Title"] = "Create User Account";
    Layout = "_AdminLayout";
}

<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-action="Admin" asp-controller="Home">AMaz</a>
        </div>
        <ul class="sidebar-menu">

            <li class="menu-header">Functions</li>
            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Auth</span></a>
                <ul class="dropdown-menu">
                    <li class=active><a class="nav-link beep beep-sidebar" asp-action="Create" asp-controller="Account">Create Account</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-bicycle"></i> <span>Features</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Create" asp-controller="AcademicYear">Create Academic Year</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-th-large"></i> <span>Components</span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Index" asp-controller="Account">View User List</a></li>
                    <li><a asp-action="Index" asp-controller="AcademicYear">View Academic Year</a></li>
                </ul>
            </li>

        </ul>
    </aside>
</div>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Create Account</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Create Account</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Create New User</h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Create" method="post" id="facultyForm" class="wizard-content mt-2 need-validation" novalidate>
                            <div class="wizard-pane">
                                <div class="form-group row align-items-center">
                                    <label class="col-md-4 text-md-right text-left">First Name</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input type="text" id="firstname" name="firstname" class="form-control" required />
                                        <div class="invalid-feedback">
                                            Please fill in the first name.
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row align-items-center">
                                    <label class="col-md-4 text-md-right text-left">Last Name</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input type="text" id="lastname" name="lastname" class="form-control" required />
                                        <div class="invalid-feedback">
                                            Please fill in the last name.
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row align-items-center">
                                    <label class="col-md-4 text-md-right text-left">Email</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input type="email" id="email" name="email" class="form-control" required>
                                        <div class="invalid-feedback" id="invalidEmailFormatMessage">
                                            Please enter a valid email address.
                                        </div>
                                        <div class="invalid-feedback email-validation-feedback" id="emailExistsValidationMessage">
                                            Email already exists!
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row align-items-center">
                                    <label class="col-md-4 text-md-right text-left">Password</label>
                                    <div class="col-lg-4 col-md-6">
                                        <input type="password" id="password" name="password" class="form-control" required>
                                        <div class="invalid-feedback">
                                            Please fill in the password.
                                        </div>
                                        <div class="invalid-feedback" id="passwordValidationMessage">
                                            Password must be at least 6 characters long and contain at least one uppercase letter, one lowercase letter, one digit, and one non-alphanumeric character!
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 text-md-right text-left mt-2">Role</label>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="selectgroup w-100">
                                            <label class="selectgroup-item">
                                                <input type="radio" name="Role" value="@((int)Role.Manager)" class="selectgroup-input" required>
                                                <span class="selectgroup-button">Manager</span>
                                            </label>
                                            <label class="selectgroup-item">
                                                <input type="radio" name="Role" value="@((int)Role.Coordinator)" class="selectgroup-input" required>
                                                <span class="selectgroup-button">Coordinator</span>
                                            </label>
                                            <label class="selectgroup-item">
                                                <input type="radio" name="Role" value="@((int)Role.Student)" class="selectgroup-input" required>
                                                <span class="selectgroup-button">Student</span>
                                            </label>
                                        </div>
                                        <div class="invalid-feedback" id="roleValidationMessage" style="display: none;">
                                            Please select a role.
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row align-items-center">
                                    <label class="col-md-4 text-md-right text-left" for="selectedFaculty">Select Faculty</label>
                                    <div class="col-lg-4 col-md-6">
                                        @Html.DropDownListFor(m => m.FacultyId, new SelectList(Model.Faculties, "FacultyId", "Name"), "Select Faculty", new { @class = "form-control", @required = "required", id = "selectedFaculty" })
                                        <div class="invalid-feedback" id="facultyValidationMessage" style="display: none;">Please select a faculty.</div>
                                    </div>
                                </div>

                                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                                <script>
                                    $(document).ready(function () {
                                        $('#selectedFaculty').on('change', function () {
                                            $(this).removeClass('is-invalid');
                                            $('#facultyValidationMessage').hide();
                                        });

                                        $('#selectedFaculty').on('click', function () {
                                            $(this).find('option:first').hide();
                                        });

                                        $('#roleValidationMessage').hide(); // Hide role validation initially

                                        $('input[name="Role"]').on('change', function () {
                                            if ($('input[name="Role"]:checked').length === 0) {
                                                $('#roleValidationMessage').show();
                                            } else {
                                                $('#roleValidationMessage').hide();
                                            }
                                        });

                                        $('#facultyForm').submit(function (event) {
                                            if ($('input[name="Role"]:checked').length === 0) {
                                                $('#roleValidationMessage').show();
                                                event.preventDefault();
                                            } else {
                                                $('#roleValidationMessage').hide();
                                            }

                                            if ($('#selectedFaculty').val() === '') {
                                                $('#selectedFaculty').addClass('is-invalid');
                                                $('#facultyValidationMessage').show();
                                                event.preventDefault();
                                            } else {
                                                $('#selectedFaculty').removeClass('is-invalid');
                                                $('#facultyValidationMessage').hide();
                                            }
                                        });
                                    });
                                </script>

                             

                                <div class="form-group row">
                                    <div class="col-md-4"></div>
                                    <div class="col-lg-4 col-md-6 text-right">
                                        <button class="btn btn-primary" type="submit" id="swal-2">Create</button>
                                        <a asp-action="Admin" asp-controller="Home" class="btn btn-icon icon-right btn-primary">Back</a>
                                    </div>
                                </div>

                            </div>


                        </form>


                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <!-- JS Libraies -->
    <script src="~/assets/modules/sweetalert/sweetalert.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/modules-sweetalert.js"></script>
}
