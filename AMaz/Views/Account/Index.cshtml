<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>View Operators</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Functions</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">View Operators</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Member List</h2>

            <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Member</h4>
                            <div class="card-header-form">
                                <form>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-md">
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Action</th>
                                    </tr>

                                    @if (Model != null)
                                    {
                                        @foreach (var user in Model)
                                        {
                                            <tr>
                                                <td>@user.FirstName @user.LastName</td>

                                                <td>@user.Email</td>

                                                <td>
                                                    @if (string.IsNullOrEmpty(user.Role))
                                                    {
                                                        <a class="text-dark" asp-action="AddRole" asp-route-id="@user.Id">+ Add to Role</a>
                                                    }
                                                    else
                                                    {
                                                        @user.Role
                                                    }
                                                </td>
                                                <td>
                                                    @if (user.IsActive.Equals("yes", StringComparison.OrdinalIgnoreCase))
                                                    {
                                                        <a class="btn btn-danger btn-sm" asp-action="Deactivate" asp-route-userId="@user.Id">Deactivate</a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-success btn-sm" asp-action="Activate" asp-route-userId="@user.Id">Activate</a>
                                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-userId="@user.Id">Delete</a>
                                                    }
                                                    <a class="btn btn-success btn-sm" asp-action="ResetPassword" asp-route-userId="@user.Id">Set Password</a>
                                                    <a class="btn btn-primary btn-sm" asp-action="ChangeUserRole" asp-route-userId="@user.Id">Change Role</a>
                                                </td>
                                            </tr>
                                        }
                                    }
             
                                </table>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-lg" asp-action="Create">Create</a>
                </div>
            </div>
        </div>
    </section>
</div>

